<% layout("./layout/boilerplate") %>
<p class="mt-12 text-gray-600 text-3xl tracking-wide italic">The Best EVs</p>
<ul class="pl-5 flex flex-wrap">
    <% for (let car of cars) {%>
    <li class="w-1/2 p-2">
        <a href="cars/<%= car.id %>">
        <img class="h-48 object-cover w-full rounded-lg" src="<%=car.image[0].url%>" alt="">
      
      <a class="text-lg font-light leading-relaxed mt-3 mb-3 text-white" href="cars/<%= car.id %>"><%= car.name %> <%= car.model %>
      </a>
    </li>
    <% } %>
  </ul>

