<% layout("./layout/boilerplate") %>
<h1 class="text-center">Edit <%=car.name%></h1>
<div class="w-3/4 md:w-1/2 mx-auto col-6 offset-3">
    <form class="needs-validation" action="/cars/<%= car.id %>/?_method=PUT" method="POST" novalidate enctype="multipart/form-data">
        <div class="mb-3">
          <label class="form-label text-lg font-light leading-relaxed mt-6 mb-3 text-white" for="maker">Vehicle Maker</label>
          <input class="form-control px-2 py-1 placeholder-blueGray-300 text-blueGray-600 relative bg-white bg-white rounded text-sm border border-blueGray-300 outline-none focus:outline-none focus:ring w-full" type="text" id="name" name="car[name]" value="<%= ' '+car.name%>" required>
        </div>
        <div class="mb-3">
          <label class="form-label text-lg font-light leading-relaxed mt-6 mb-3 text-white" for="model">Vehicle Model</label>
          <input class="form-control px-2 py-1 placeholder-blueGray-300 text-blueGray-600 relative bg-white bg-white rounded text-sm border border-blueGray-300 outline-none focus:outline-none focus:ring w-full" type="text" id="model" name="car[model]" value="<%= ' '+car.model%>" required>
        </div>
        <div class="mb-3">
          <label class="form-label text-lg font-light leading-relaxed mt-6 mb-3 text-white" for="year">Year of Production</label>
          <input class="form-control px-2 py-1 placeholder-blueGray-300 text-blueGray-600 relative bg-white bg-white rounded text-sm border border-blueGray-300 outline-none focus:outline-none focus:ring w-full" type="text" id="year" name="car[year]" value="<%= ' '+car.year%>" required>
        </div>
        <div class="mb-3">
          <label class="form-label text-lg font-light leading-relaxed mt-6 mb-3 text-white" for="price">Price</label>
          <input class="form-control px-2 py-1 placeholder-blueGray-300 text-blueGray-600 relative bg-white bg-white rounded text-sm border border-blueGray-300 outline-none focus:outline-none focus:ring w-full" type="text" id="price" name="car[price]" value="<%= ' '+car.price%>" required>
        </div>
        <div class="mb-3">
          <label class="form-label text-lg font-light leading-relaxed mt-6 mb-3 text-white" for="body">Body</label>
          <input class="form-control px-2 py-1 placeholder-blueGray-300 text-blueGray-600 relative bg-white bg-white rounded text-sm border border-blueGray-300 outline-none focus:outline-none focus:ring w-full" type="text" id="body" name="car[body]" value="<%= ' '+car.body%>" required>
        </div>
        <div class="mb-3">
          <label class="form-label text-lg font-light leading-relaxed mt-3 mb-3 text-white" for="description">Description</label>
          <input class="form-control px-2 py-1 placeholder-blueGray-300 text-blueGray-600 relative bg-white bg-white rounded text-sm border border-blueGray-300 outline-none focus:outline-none focus:ring w-full" type="text" id="description" name="car[description]" value="<%= ' '+car.description%>" required>
        </div>
        <div class="mb-3">
          <label class="form-label text-lg font-light leading-relaxed mt-3 mb-3 text-white" for="tripRange">Trip Range</label>
          <input class="form-control px-2 py-1 placeholder-blueGray-300 text-blueGray-600 relative bg-white bg-white rounded text-sm border border-blueGray-300 outline-none focus:outline-none focus:ring w-full" type="text" id="tripRange" name="car[tripRange]" value="<%= ' '+car.tripRange%>" required>
        </div>
        <div class="mb-3">
          <label class="form-label text-lg font-light leading-relaxed mt-3 mb-3 text-white" for="driveTrain">Drive Train</label>
          <input class="form-control px-2 py-1 placeholder-blueGray-300 text-blueGray-600 relative bg-white bg-white rounded text-sm border border-blueGray-300 outline-none focus:outline-none focus:ring w-full" type="text" id="driveTrain" name="car[driveTrain]" value="<%= ' '+car.driveTrain%>" required>
        </div>
        <div class="mb-3">
          <label class="form-label text-lg font-light leading-relaxed mt-3 mb-3 text-white" for="fullChargeTime">Full Charge Time</label>
          <input class="form-control px-2 py-1 placeholder-blueGray-300 text-blueGray-600 relative bg-white bg-white rounded text-sm border border-blueGray-300 outline-none focus:outline-none focus:ring w-full" type="text" id="fullChargeTime" name="car[fullChargeTime]" value="<%= ' '+car.fullChargeTime%>" required>
        </div>
        <div class="mb-3">
          <label class="form-label text-lg font-light leading-relaxed mt-3 mb-3 text-white" for="quickChargeTime">Quick Charge Time</label>
          <input class="form-control px-2 py-1 placeholder-blueGray-300 text-blueGray-600 relative bg-white bg-white rounded text-sm border border-blueGray-300 outline-none focus:outline-none focus:ring w-full" type="text" id="quickChargeTime" name="car[quickChargeTime]" value="<%= ' '+car.quickChargeTime%>" required>
        </div>
        <div class="mb-3">
          <label class="form-label text-lg font-light leading-relaxed mt-3 mb-3 text-white" for="ownershipCostOverTime">Ownership Cost Over 5 Years</label>
          <input class="form-control px-2 py-1 placeholder-blueGray-300 text-blueGray-600 relative bg-white bg-white rounded text-sm border border-blueGray-300 outline-none focus:outline-none focus:ring w-full" type="text" id="ownershipCostOverTime" name="car[ownershipCostOverTime]" value="<%= ' '+car.ownershipCostOverTime%>" required>
        </div>
        <div class="mb-3">
          <label class="form-label text-lg font-light leading-relaxed mt-3 mb-3 text-white" for="selfDriving">Auto-Pilot Feature</label>
          <input class="form-control px-2 py-1 placeholder-blueGray-300 text-blueGray-600 relative bg-white bg-white rounded text-sm border border-blueGray-300 outline-none focus:outline-none focus:ring w-full" type="text" id="selfDriving" name="car[selfDriving]" value="<%= ' '+car.selfDriving%>" required>
        </div>
        <div class="mb-3">
          <label class="form-label text-lg font-light leading-relaxed mt-3 mb-3 text-white" for="passengers">Number of Passengers</label>
          <input class="form-control px-2 py-1 placeholder-blueGray-300 text-blueGray-600 relative bg-white bg-white rounded text-sm border border-blueGray-300 outline-none focus:outline-none focus:ring w-full" type="text" id="passengers" name="car[passengers]" value="<%= ' '+car.passengers%>" required>
        </div>
        <div class="mb-3">
          <label class="form-label text-lg font-light leading-relaxed mt-3 mb-3 text-white" for="storageSize">Storage Size</label>
          <input class="form-control px-2 py-1 placeholder-blueGray-300 text-blueGray-600 relative bg-white bg-white rounded text-sm border border-blueGray-300 outline-none focus:outline-none focus:ring w-full" type="text" id="storageSize" name="car[storageSize]" value="<%= ' '+car.storageSize%>" required>
        </div>
        <div class="mb-3">
          <label class="form-label text-lg font-light leading-relaxed mt-3 mb-3 text-white" for="costToInsureAnnual">Average Annual Insurance Cost</label>
          <input class="form-control px-2 py-1 placeholder-blueGray-300 text-blueGray-600 relative bg-white bg-white rounded text-sm border border-blueGray-300 outline-none focus:outline-none focus:ring w-full" type="text" id="costToInsureAnnual" name="car[costToInsureAnnual]" value="<%= ' '+car.costToInsureAnnual%>" required>
        </div>
        <div class="mb-3">
          <label class="form-label text-lg font-light leading-relaxed mt-3 mb-3 text-white" for="chargerType">Charger Type</label>
          <input class="form-control px-2 py-1 placeholder-blueGray-300 text-blueGray-600 relative bg-white bg-white rounded text-sm border border-blueGray-300 outline-none focus:outline-none focus:ring w-full" type="text" id="chargerType" name="car[chargerType]" value="<%= ' '+car.chargerType%>" required>
        </div>
        <div class="mb-3">
          <label class="form-label text-lg font-light leading-relaxed mt-3 mb-3 text-white" for="zeroSixty">Zero-to-Sixty</label>
          <input class="form-control px-2 py-1 placeholder-blueGray-300 text-blueGray-600 relative bg-white bg-white rounded text-sm border border-blueGray-300 outline-none focus:outline-none focus:ring w-full" type="text" id="zeroSixty" name="car[zeroSixty]" value="<%= ' '+car.zeroSixty%>" required>
        </div>
        <div class="mb-3">
          <label class="form-label text-lg font-light leading-relaxed mt-3 mb-3 text-white" for="hp">Horsepower</label>
          <input class="form-control px-2 py-1 placeholder-blueGray-300 text-blueGray-600 relative bg-white bg-white rounded text-sm border border-blueGray-300 outline-none focus:outline-none focus:ring w-full" type="text" id="hp" name="car[hp]" value="<%= ' '+car.hp%>" required>
        </div>
          <div class="text-lg font-light leading-relaxed mt-6 mb-3 text-white">
            <label class="mb-3" for="image">Insert Image</label>
            <input class="form-control px-2 py-1 placeholder-blueGray-300 text-blueGray-600 relative bg-white bg-white rounded text-sm border border-blueGray-300 outline-none focus:outline-none focus:ring w-full" type="file" name="image" id="formFile" multiple>
            </div>
            <div class="mb-3">
              <h2>Delete Images</h2>
              <% car.image.forEach(function(img, i) { %>
              <p>
                  <label class="fancy-checkbox-label" for="image<%=i%>">
                      <input type="checkbox" name="selectedImages[]" id="image<%=i%>" value="<%=img.filename%>">
                      <span class="fancy-checkbox fancy-checkbox-img"></span>
                      <img src="<%= img.url%>" class="img-thumbnail" alt="" id="image<%=i%>">
                  </label>
              </p>
              <% }) %>
          </div>

          <button class="mt-3 bg-green-500 text-white active:bg-green-600 font-bold uppercase text-base px-8 py-3 rounded shadow-md hover:shadow-lg outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150 transform hover:scale-110 hover:bg-green-700 motion-reduce:transform-none">Submit</button>
      </form>
      <div class="mt-3 text-white">
      <a href="/cars/<%= car.id%>">Go back to <%= car.name %></a>
      </div>
